include ../../elements/input/input.pug
include ../../elements/toggle-one/toggle-one.pug
include ../../elements/buttons/button/button.pug
include ../../elements/buttons/button-login/button-login.pug
include ../../elements/radio/radio.pug

mixin registration-account
    .registration-account
        .registration-account__title Регистрация аккаунта
        .registration-account__two-fields
            .registration-account__input-container
                +input({placeholder:'Имя', pale: true})
            .registration-account__input-container
                +input({placeholder:'Фамилия', pale: true})
        +radio 
        .registration-account__bithday
            +input({placeholder: 'ДД.ММ.ГГГГ', className: 'long', leftLabel: 'Дата рождения', id: "birthday", pale: true})
        .registration-account__fields
            .registration-account__fields-title Данные для входа в сервис
            .registration-account__container-input
                +input({placeholder: 'Email', className: 'long', pale: true})
            +input({placeholder:'Пароль', className: 'long', pale: true})
        +toggle-one(false)
        .registration-account__button
            +button({text: 'Перейти к оплате'})
        .registration-account__toxin
            .registration-account__text Уже есть аккаунт на Toxin
            +button-login("Войти", "fat")
    

    
