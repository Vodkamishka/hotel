include ../../elements/input/input.pug

mixin footer (props)
    - const {classFooter, titlesFooter, textTop, textBottom, email, registrationPage = ''} = props
    div(class =`footer ${classFooter}`)
        .footer__text-block(class=`footer__text-block_${registrationPage}`)
            ul.footer__ul
                a(href="/landing.html")   
                    img(src="assets/img/logotypes/logo.svg", alt="logo")
                p(class="footer__paragraph")= textTop 
            for el in titlesFooter
                ul.footer__ul
                    for i in el.slice(0,1)
                        li.footer__li= i
                    for i in el.slice(1)
                        li.footer__li 
                            a(href="/mock-address/change-me" class="footer__a")=i            
            ul.footer__ul
                li.footer__li= textBottom[0]
                li.footer__li= textBottom[1]
                +input({placeholder: email, className: "short", expand: 'arrow_forward'})               