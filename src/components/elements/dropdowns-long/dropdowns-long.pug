include ../input/input
include ../execute-panel/execute-panel

mixin dropdowns-long (placeholder='', classInput='', classLabel='', leftLabel='', rightLabel='', showButtonClear='', classShowDropdown='', x = 0, y = 0, z = 0)
    .dropdowns-long
        +input(placeholder, classInput, classLabel, leftLabel, rightLabel)
        .dropdowns-long__container_execute(class= classShowDropdown)
            - let humans = [{people: 'Взрослые', number: x}, {people: 'Дети', number: y}, {people: 'Младенцы', number: z}]
                for el in humans
                    - let {people, number} = el
                        .dropdowns-long__wrapper_execute-panel
                            +execute-panel(people, number)
            .dropdowns-long__buttons
                if showButtonClear === 'block'
                    .dropdowns-long__clear Очистить
                .dropdowns-long__apply Применить