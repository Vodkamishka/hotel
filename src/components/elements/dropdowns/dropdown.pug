include ../input-text/input-text
include ./execute-panel/execute-panel


mixin shortDropdown (leftLabel, rightLabel, classLabel, placeholder, classInput, clas)
    .short-dropdowns
        +Input(leftLabel, rightLabel, classLabel, placeholder, classInput)
        .short-dropdown(class=clas)
            for el in ["Спальни", "Кровати"]
                .short-dropdown__row
                    div= el
                    +execute-panel('-', 2, "+")
            .short-dropdown__row
                div Ванные комнаты
                +execute-panel('', 0, "+")

mixin longDropdown (leftLabel, rightLabel, classLabel, placeholder, classInput, display)
    .long-dropdowns
        +Input(leftLabel, rightLabel, classLabel, placeholder, classInput)
        .short-dropdown
            .short-dropdown__row
                div Взрослые
                +execute-panel('', 0, "+")
            .short-dropdown__row
                div Дети
                +execute-panel('', 0, "+")
            .short-dropdown__row
                div Младенцы
                +execute-panel('', 0, "+")
            .short-dropdown__buttons
                if display === 'block'
                    .short-dropdown__clear Очистить
                .short-dropdown__apply Применить
                


        
            