include ../../elements/like/like

mixin consumer-comments(img, name, term, like, text)
    .consumer-comments
        .consumer-comments_top
            if img === 'man'
                .consumer-comments__img
            else 
                .consumer-comments__img.consumer-comments__img_girl
            .consumer-comments_right
                .consumer-comments__name=name
                .consumer-comments__term=term
        .consumer-comments_bottom
            if like === 12
                +like(12)
            else 
                +like(2)
            .consumer-comments__text
                p.consumer-comments__text_p=text
                    