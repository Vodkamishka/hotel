include ./checkbox-list/checkbox-list.pug

- var list = [{text: 'Завтрак', checked: false},{text: 'Письменный стол', checked: true},{text: 'Стул для кормления', checked: true},{text: 'Кроватка', checked: true},{text: 'Телевизор', checked: false},{text: 'Шампунь', checked: false},{text: 'Телевизор', checked: false},{text: 'Шампунь', checked: false}]

mixin expandable-checkbox (display)
    .expandable-checkbox    
        .expandable-checkbox__mainline
            .expandable-checkbox__title expandable checkbox list
            .expandable-checkbox__image(style=`background: ${display} ? 'red' : 'blue' `)
        .expandable-checkbox__list
            +checkList(list)

           

    