include ../input/input
include ../execute-panel/execute-panel

mixin dropdowns-room-selection (props)
    - const {placeholder, className, leftLabel, rightLabel, classShowDropdown} = props
    - props = {...props, expand: 'expand', readonly: 'true', className: 'input_border'}
    .dropdowns-room-selection(class=`dropdowns-room-selection_${className}`)
        +input(props)
        .dropdowns-room-selection__container-execute(class= classShowDropdown)
            - let goods = [{bed: 'Спальни', number: 2}, {bed: 'Кровати', number: 2}, {bed: 'Ванные комнаты', number: 0}]
                for el in goods
                    - let {bed, number} = el
                    .dropdowns-room-selection__wrapper-execute-panel
                        +execute-panel({title: bed, result: number})
            
            

