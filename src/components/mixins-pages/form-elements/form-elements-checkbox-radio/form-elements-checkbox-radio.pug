include ../../../elements/dropdowns-guest-selection/dropdowns-guest-selection
include ../../../elements/consumer-comments/consumer-comments
include ../../../elements/checkbox-buttons/checkbox-buttons
include ../../../elements/checkbox/checkbox.pug
include ../../../elements/radio/radio.pug
include ../../../elements/toggle/toggle.pug
include ../../../elements/like-button/like-button.pug
include ../../../elements/rate/rate.pug

mixin form-elements-checkbox-radio(checkboxList)
    .form-elements-checkbox-radio
        .form-elements-checkbox-radio__checkbox
            +checkbox(checkboxList)
        .form-elements-checkbox-radio__radio
            +radio('show')
        .form-elements-checkbox-radio__toggle
            +toggle('show')
        .form-elements-checkbox-radio__like
            +like-button
        .form-elements-checkbox-radio__rate
            +rate
        .form-elements-checkbox-radio__dropdown
            +dropdowns-guest-selection({placeholder: "Сколько гостей", classInput: "input_long input_border", classLabel: 'long', leftLabel: "dropdown"})
        .form-elements-checkbox-radio__rich
            +checkbox-buttons("Rich Checkbox Buttons")
        .form-elements-checkbox-radio__murad
            - let textOne = 'Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей. '
            +consumer-comments({img: "man", name: "Мурад Сарафанов", term: "5 дней назад", like: 12, text: textOne})